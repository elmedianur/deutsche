# Quiz Bot Pro - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================================
# BOT SETTINGS (Required)
# ============================================================
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# ============================================================
# DATABASE
# ============================================================
# For Docker:
DATABASE_URL=postgresql+asyncpg://postgres:quiz_secret@postgres:5432/quiz_bot
# For local development:
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/quiz_bot
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# PostgreSQL password (for docker-compose)
POSTGRES_PASSWORD=quiz_secret

# ============================================================
# REDIS
# ============================================================
# For Docker:
REDIS_URL=redis://redis:6379/0
# For local:
# REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=quiz:

# ============================================================
# ADMIN SETTINGS (Required)
# ============================================================
# Comma-separated Telegram user IDs
SUPER_ADMIN_IDS=123456789
ADMIN_IDS=123456789,987654321

# ============================================================
# QUIZ SETTINGS
# ============================================================
DEFAULT_TIME_PER_QUESTION=15
MAX_QUESTIONS_PER_QUIZ=200
STREAK_RESET_HOURS=36

# ============================================================
# PAYMENT SETTINGS (Telegram Stars)
# ============================================================
STARS_ENABLED=true
PREMIUM_MONTHLY_STARS=100
PREMIUM_YEARLY_STARS=1000

# ============================================================
# AUDIO SETTINGS
# ============================================================
AUDIO_ENABLED=true
# Options: gtts, azure, local
AUDIO_PROVIDER=gtts

# Azure TTS (optional)
# AZURE_SPEECH_KEY=your_azure_key
# AZURE_SPEECH_REGION=westeurope

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_COMMANDS_PER_MINUTE=10

# ============================================================
# WEBHOOK (Optional - for production)
# ============================================================
WEBHOOK_ENABLED=false
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080

# ============================================================
# LOGGING
# ============================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Options: json, text
LOG_FORMAT=json
LOG_FILE=logs/bot.log

# ============================================================
# REFERRAL SETTINGS
# ============================================================
REFERRAL_BONUS_DAYS=3
REFERRAL_MIN_QUIZZES=5

# ============================================================
# TOURNAMENT SETTINGS
# ============================================================
TOURNAMENT_ENABLED=true
# 0=Monday, 6=Sunday
WEEKLY_TOURNAMENT_DAY=0
WEEKLY_TOURNAMENT_HOUR=10
