# Quiz Bot Pro - Environment Configuration
# Copy this file to .env and fill in the values
# MUHIM: Hech qachon .env faylini git'ga push qilmang!

# ============================================================
# BOT SETTINGS (Required)
# ============================================================
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# ============================================================
# DATABASE
# ============================================================
# For Docker/Production:
# DATABASE_URL=postgresql+asyncpg://quiz_user:your_secure_password@localhost:5432/quiz_bot
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./quiz_bot.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# PostgreSQL password (for docker-compose)
POSTGRES_PASSWORD=your_secure_password_here

# ============================================================
# REDIS
# ============================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=quiz:

# ============================================================
# ADMIN SETTINGS (Required)
# ============================================================
# Comma-separated Telegram user IDs (without brackets!)
# Example: 123456789 or 123456789,987654321
SUPER_ADMIN_IDS=your_telegram_user_id
ADMIN_IDS=admin1_id,admin2_id

# ============================================================
# QUIZ SETTINGS
# ============================================================
DEFAULT_TIME_PER_QUESTION=15
MAX_QUESTIONS_PER_QUIZ=200
STREAK_RESET_HOURS=36

# ============================================================
# PAYMENT SETTINGS (Telegram Stars)
# ============================================================
STARS_ENABLED=true
PREMIUM_MONTHLY_STARS=299
PREMIUM_YEARLY_STARS=2999

# ============================================================
# AUDIO SETTINGS
# ============================================================
AUDIO_ENABLED=true
# Options: gtts, azure, local
AUDIO_PROVIDER=gtts

# Azure TTS (optional)
# AZURE_SPEECH_KEY=your_azure_key
# AZURE_SPEECH_REGION=westeurope

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_COMMANDS_PER_MINUTE=10

# ============================================================
# WEBHOOK (Optional - for production)
# ============================================================
WEBHOOK_ENABLED=false
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080

# ============================================================
# LOGGING
# ============================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Options: json, text
LOG_FORMAT=json
LOG_FILE=logs/bot.log

# ============================================================
# REFERRAL SETTINGS
# ============================================================
REFERRAL_BONUS_DAYS=3
REFERRAL_MIN_QUIZZES=5

# ============================================================
# TOURNAMENT SETTINGS
# ============================================================
TOURNAMENT_ENABLED=true
# 0=Monday, 6=Sunday
WEEKLY_TOURNAMENT_DAY=0
WEEKLY_TOURNAMENT_HOUR=10
